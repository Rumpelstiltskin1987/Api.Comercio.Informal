@page "/"
@inject NavigationManager NavManager

<PageTitle>Inicio</PageTitle>

<link href="home.css" rel="stylesheet" />

<div class="home-container">
    <div class="home-watermark"></div>

    <div class="home-content">
        <h2 class="home-title text-uppercase">
            Sistema de Recaudación de Impuestos del Comercio Informal
        </h2>

        <hr class="home-divider" />

        <p class="lead mb-5 text-muted">
            Bienvenido a la plataforma de administración municipal.
        </p>

        <div class="d-flex justify-content-center gap-4 flex-wrap">
            <button class="btn official-btn-primary btn-lg px-5 py-3" @onclick="IrAPadron">
                <i class="bi bi-people-fill me-2 fs-5"></i> IR AL PADRÓN
            </button>

            <button class="btn official-btn-outline-secondary btn-lg px-5 py-3" @onclick="IrACobradores">
                <i class="bi bi-person-badge me-2 fs-5"></i> VER COBRADORES
            </button>
        </div>
    </div>
</div>

@code {
    private void IrAPadron()
    {
        NavManager.NavigateTo("padron");
    }

    private void IrACobradores()
    {
        NavManager.NavigateTo("cobradores");
    }
}