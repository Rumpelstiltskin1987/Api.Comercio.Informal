@using Api.Entities.DTO
@* Este componente se puede reutilizar para cualquier tipo de Log *@

@if (Mostrar)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-scrollable" style="max-width: 75%">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title">
                        <i class="bi bi-clock-history me-2"></i> Historial de Cambios
                    </h5>
                    <button type="button" class="btn-close" @onclick="Cerrar"></button>
                </div>
                <div class="modal-body" style="max-height: 60vh; overflow-y: auto;">
                    @if (Cargando)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-guinda" role="status"></div>
                            <p>Cargando bitácora...</p>
                        </div>
                    }
                    else if (Logs == null || !Logs.Any())
                    {
                        <div class="alert alert-secondary">No hay historial registrado para este elemento.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover font-sm m-0">
                                <thead class="table-light" sticky-top" style="top: 0; z-index: 1;">
                                    <tr>
                                        <th style="width: 17%;">Fecha</th>
                                        <th style="width: 14%;">Usuario</th>
                                        <th style="width: 14%;">Movimiento</th>
                                        <th style="width: 55%;">Detalles</th>
                                    </tr>
                                </thead>
                                <tbody style="font-size: 0.90rem;">
                                    @foreach (var log in Logs)
                                    {
                                        <tr style="padding: 0 5px 0 5px">
                                            <td style="padding-left: 5px; padding-right: 5px;">@log.Fecha</td>
                                            <td class="fw-bold" style="padding-left: 5px; padding-right: 5px;">@log.Usuario</td>
                                            <td style="padding-left: 5px; padding-right: 5px;">
                                                <span class="badge @ObtenerClaseBadge(log.Movimiento)">
                                                    @log.Movimiento
                                                </span>
                                            </td>
                                            <td class="text-muted small" style="padding-left: 5px; padding-right: 5px;">@log.Detalles</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cerrar">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Mostrar { get; set; }
    [Parameter] public EventCallback<bool> MostrarChanged { get; set; }

    // Aquí puedes usar una clase DTO genérica para logs si tus tablas logs son diferentes
    [Parameter] public List<DtoHistorial> Logs { get; set; } = new();
    [Parameter] public bool Cargando { get; set; }

    private Task Cerrar()
    {
        return MostrarChanged.InvokeAsync(false);
    }

    private string ObtenerClaseBadge(string accion) => accion switch
    {
        "UPDATE" => "bg-warning text-dark",
        "INSERT" => "bg-success",
        "DELETE" => "bg-danger",
        _ => "bg-secondary"
    };
}