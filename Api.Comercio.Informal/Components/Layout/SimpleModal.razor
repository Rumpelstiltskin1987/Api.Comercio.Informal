@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    @* SOLO mostrar el botón si HideSaveButton es FALSE *@
                    @if (!HideSaveButton)
                    {
                        <button type="button" class="btn btn-primary" @onclick="OnConfirm">Guardar</button>
                        <button type="button" class="btn btn-secondary" @onclick="OnCancel">Cancelar</button>
                    }else
                    {
                        <button type="button" class="btn btn-secondary" @onclick="OnCancel">Salir</button>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public string Title { get; set; } = "Ventana Modal";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public bool HideSaveButton { get; set; } = false; 
}