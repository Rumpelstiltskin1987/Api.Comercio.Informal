@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        @* HEADER: Título a la izquierda, Logout a la derecha *@
        <div class="top-row px-4 d-flex justify-content-between align-items-center border-bottom shadow-sm">

            @* Lado Izquierdo: Título *@
            <div class="d-flex align-items-center">
                <span class="text-uppercase fw-bold"
                      style="color: #9D2449; font-size: 1.4rem; letter-spacing: 0.5px; line-height: 1.2;">
                    Sistema de Control de Comercio Informal
                </span>
            </div>

            @* Lado Derecho: Componente de Salida *@
            <div class="d-flex align-items-center">
                <LogoutHeader />
            </div>

        </div>

        <article class="content px-4 py-4">
            @Body
        </article>
    </main>
</div>