@using Api.Comercio.Informal.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            @* Cambiamos RouteView por AuthorizeRouteView *@
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        @* Si no está logueado, lo mandamos al login *@
                        <RedirectToLogin />
                    }
                    else
                    {
                        @* Si está logueado pero no tiene el ROL necesario *@
                        <div class="container mt-5">
                            <div class="alert alert-danger">
                                <h4>Acceso Denegado</h4>
                                <p>No tienes los permisos suficientes para ver esta sección.</p>
                                <a href="/" class="btn btn-outline-danger">Volver al Inicio</a>
                            </div>
                        </div>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>No encontrado</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Lo siento, no hay nada en esta dirección.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>